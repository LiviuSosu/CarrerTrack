@model  PagedList.IPagedList<CarrerTrack.Web.Model.JobAnnouncement>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>My job announcements</h2>
@Html.ActionLink("Show all", "Index", new { archived = ViewBag.ArchievedSort })
<br />

<p>
    @Html.ActionLink("Add job announcement", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Role", "Index", new { sortOrder = ViewBag.RoleParameter, currentFilter = ViewBag.CurrentFilter, archived = ViewBag.ArchievedSort })
        </th>
        <th>
            @Html.ActionLink("Location", "Index", new { sortOrder = ViewBag.LocationParameter, currentFilter = ViewBag.CurrentFilter, archived = ViewBag.ArchievedSort })
        </th>
        <th>
            @Html.ActionLink("Company", "Index", new { sortOrder = ViewBag.CompanyParameter, currentFilter = ViewBag.CurrentFilter, archived = ViewBag.ArchievedSort })
        </th>
        <th>
            @Html.ActionLink("Date Added", "Index", new { sortOrder = ViewBag.DateAddedParameter, currentFilter = ViewBag.CurrentFilter, archived = ViewBag.ArchievedSort })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Role.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>

            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Actions <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Edit", "Edit", new { id=item.Id })</li>
                    <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id=item.Id })</li>
                    <li role="separator" class="divider"></li>
                    @if (item.IsArchieved == false)
                    {
                        <li>@Html.ActionLink("Archive", "Archive", new { id = item.Id })</li>
                    }
                    else
                    {
                        @*<li><input type="submit" value="Archive" /></li>*@
                    }
                </ul>
            </div>
        </td>
    </tr>
}

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount


@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, archived = ViewBag.ArchievedSort }))
