@model IEnumerable<CarrerTrack.Web.Model.Company>

<br/>
<br/>

    <div>
        <h2>My traced companies</h2>
         @Html.ActionLink("Add company", "Create", "Company", new object { }, new { @class = "btn btn-primary" })
    </div>

<br/>

@using (Html.BeginForm("Index", "Company", FormMethod.Get))
{
    <p>
        Find by title: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
}

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParameter, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Size", "Index", new { sortOrder = ViewBag.SizeSortParameter, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>

                <td>
                    <div class="btn-group" role="group" aria-label="...">
                        @Html.ActionLink("Edit", "Edit", new { id = item.CompanyId }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Details", "Details", new { id = item.CompanyId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.CompanyId }, new { @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </table>