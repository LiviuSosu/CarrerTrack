@model CarrerTrack.Web.Model.Company

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>
<br/>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Size)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Size)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GeneralDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GeneralDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Link)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>
    <a href="javascript:void(0);" class="anchorDetail" data-id="@Model.CompanyId">Reviews</a>
    <a href="javascript:void(0);" class="anchorCreate" >Create</a> 
</div>

<div class="btn btn-group" role="group" aria-label="...">
    @Html.ActionLink("Edit", "Edit", new { CompanyId = Model.CompanyId}, new { @class="btn btn-warning"}) 
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
</div>


<div id='myModal' class='modal'>
    <div class="modal-dialog"  >
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>

</div>

@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script>
    var TeamDetailPostBackURL = '/Review/Index';
    $(function () {
        $(".anchorDetail").click(function () {
            debugger;
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: TeamDetailPostBackURL,
                contentType: "application/json; charset=utf-8",
                data: { "Id": id },
                datatype: "json",
                success: function (data) {
                    debugger;
                    $('#myModalContent').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');

                },
                error: function () {
                    alert("Dynamic content load failed.");
                }
            });
        });
        $("#closebtn").on('click',function(){
            $('#myModal').modal('hide');
        });
    });
    </script>

    <script>
        var createUrl = '/Review/Create';
        $(function () {
            $(".anchorCreate").click(function () {
                debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: createUrl,
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        debugger;
                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });
            $("#closebtn").on('click', function () {
                $('#myModal').modal('hide');
            });
        });
    </script>
}  